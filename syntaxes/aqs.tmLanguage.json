{
  "name": "ArchestrA QuickScript",
  "scopeName": "source.aqs",
  "fileTypes": ["aqs"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#booleans" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#types" },
    { "include": "#declarations" },
    { "include": "#functions" },
    { "include": "#variables" },
    { "include": "#memberAccess" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.apostrophe.aqs",
          "match": "'.*$"
        },
        {
          "name": "comment.block.braces.aqs",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "match": ".",
              "name": "comment.block.braces.aqs"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aqs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aqs",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.aqs",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aqs",
          "match": "(?i)\\b(If|Then|Else|ElseIf|EndIf|While|Wend|EndWhile|For|To|Step|Next|Try|Catch|Finally|EndTry|Return|Exit|New|As)\\b",
          "captures": {}
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.aqs",
          "match": "(?i)\\b(True|False|Null|Nothing)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.aqs",
          "match": "(?i)(==|<>|<=|>=|<|>|\\+|\\-|\\*\\*|\\*|/|MOD\\b|AND\\b|OR\\b|NOT\\b|&|\\||\\^|SHL\\b|SHR\\b|=)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.statement.aqs",
          "match": ";"
        },
        {
          "name": "invalid.illegal.missing-semicolon.aqs",
          "match": "(?i)^(?!\\s*(?:'|$))(?!\\s*(?:If\\b|Else\\b|ElseIf\\b|EndIf\\b|While\\b|Wend\\b|EndWhile\\b|For\\b|Next\\b|Try\\b|Catch\\b|Finally\\b|EndTry\\b))(?=.*\\S)(?<!;)\\s*$"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.aqs",
          "match": "(?i)\\b(Integer|Float|Double|String|Boolean|DateTime|Object|System\\.[A-Za-z0-9_.]+|aaContent\\.ContentInfo|aaGraphic\\.GraphicInfo|CustomPropertyValuePair|PropertyOverrideValue)\\b"
        },
        {
          "name": "storage.modifier.aqs",
          "match": "(?i)\\bDim\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.declaration.variable.aqs",
          "match": "(?i)\\b(Dim)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s+(As)\\s+([A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*)*)",
          "captures": {
            "1": { "name": "storage.modifier.aqs" },
            "2": { "name": "variable.other.definition.aqs" },
            "3": { "name": "keyword.operator.word.as.aqs" },
            "4": { "name": "storage.type.aqs" }
          }
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.aqs",
          "match": "(?i)\\b(Abs|ArcCos|ArcSin|ArcTan|Cos|Exp|Int|Log|Log10|LogN|Pi|Round|Sgn|Sin|Sqrt|Tan|Trunc|StringLen|StringReplace|StringInString|StringMid|StringLeft|StringRight|StringTrim|Now|LogMessage|LogError|LogWarning|LogTrace|LogCustom|ShowGraphic|HideGraphic|ShowContent|HideContent|SetGood|SetBad|SetUncertain|SetInitializing|IsGood|IsBad|IsUncertain|IsInitializing|IsUsable)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.aqs",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "memberAccess": {
      "patterns": [
        {
          "name": "variable.other.member.aqs",
          "match": "(?i)\\bMe\\.[A-Za-z_][A-Za-z0-9_]*"
        },
        {
          "name": "variable.other.member.aqs",
          "match": "(?i)[A-Za-z_][A-Za-z0-9_]*\\.[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    }
  },
  "injections": {},
  "uuid": "a4c3b2b0-0000-0000-aqs-quickscript"
}
